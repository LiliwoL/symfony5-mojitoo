{% extends 'base.html.twig' %}

{% block title %}Places index{% endblock %}

{% block body %}
    <h1>Places index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>DescShort</th>
                <th>DescLong</th>
                <th>Lat</th>
                <th>Lng</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for place in places %}
            <tr>
                <td>{{ place.id }}</td>
                <td>{{ place.name }}</td>
                <td>{{ place.descShort }}</td>
                <td>{{ place.descLong }}</td>
                <td>{{ place.lat }}</td>
                <td>{{ place.lng }}</td>
                <td>
                    <a href="{{ path('places_show', {'id': place.id}) }}">show</a>
                    <a href="{{ path('places_edit', {'id': place.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('places_new') }}">Create new</a>
{% endblock %}
