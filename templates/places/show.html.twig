{% extends 'base.html.twig' %}

{% block title %}Places{% endblock %}

{% block body %}
    <h1>Places</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ place.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ place.name }}</td>
            </tr>
            <tr>
                <th>DescShort</th>
                <td>{{ place.descShort }}</td>
            </tr>
            <tr>
                <th>DescLong</th>
                <td>{{ place.descLong }}</td>
            </tr>
            <tr>
                <th>Lat</th>
                <td>{{ place.lat }}</td>
            </tr>
            <tr>
                <th>Lng</th>
                <td>{{ place.lng }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('places_index') }}">back to list</a>

    <a href="{{ path('places_edit', {'id': place.id}) }}">edit</a>

